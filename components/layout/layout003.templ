		</nav>
		<!-- Divider -->
		<div class="border-t border-sidebar-border my-4"></div>
		<!-- Secondary Navigation -->
		<nav class="space-y-2">
			<h3 class="text-sm font-semibold text-sidebar-foreground mb-3">Tools</h3>
